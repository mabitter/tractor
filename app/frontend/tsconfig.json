{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "module": "es6",
      "jsx": "react",
      "target": "es5",
      "typeRoots" : ["./typings", "node_modules/@types"],
      "moduleResolution": "node"  // required by Three.js
  },
  "include": ["src", "test"]
}
